{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build (debug)",
      "icon": {
        "color": "terminal.ansiRed",
        "id": "tools"
      },
      "detail": "Compile c++ code for debugging",
      "type": "shell",
      "command": "g++",
      "args": [
        "src/**.cpp",
        "-g", "-O0",
        "-fdiagnostics-color=always",
        "-std=c++26",
        "-I", "include/",
        "-L", "lib/",
        "-o", "bin/debug/${workspaceFolderBasename}.exe"
      ],
      "problemMatcher": "$gcc",
      "group": "build"
    },
